{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es6",
    "rootDir": ".",
    "lib": ["es2018"],
    "paths": {
      // makes for easier imports in unit tests.
      "src/*": ["src/*"]
    }
  },
  "exclude": ["./node_modules"]
}
